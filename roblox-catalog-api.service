[Unit]
Description=Roblox Catalog Scraper API
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/catalog
Environment="PATH=/var/www/catalog/venv/bin"
ExecStart=/var/www/catalog/venv/bin/gunicorn --workers 4 --bind 127.0.0.1:5000 api:app
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
